<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:left="@dimen/talk_bubble_tail">
        <shape
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shape="rectangle">
            <solid android:color="@color/light_blue_grey" />
            <corners
                android:bottomLeftRadius="@dimen/chat_bubble_corners"
                android:bottomRightRadius="@dimen/chat_bubble_corners"
                android:topRightRadius="@dimen/chat_bubble_corners"
                android:topLeftRadius="0dp" />
        </shape>
    </item>

    <item
        android:width="@dimen/talk_bubble_tail"
        android:height="@dimen/talk_bubble_tail"
        android:gravity="top|left"
        android:right="@dimen/talk_bubble_tail">
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <vector
                android:width="@dimen/talk_bubble_tail"
                android:height="@dimen/talk_bubble_tail"
                android:viewportWidth="25.0"
                android:viewportHeight="25.0">
                <path
                    android:fillColor="@color/light_blue_grey"
                    android:pathData="M25,25 25,0 0,0z" />
            </vector>
        </rotate>
    </item>

    <item
        android:bottom="1dp"
        android:left="16dp"
        android:right="1dp"
        android:top="1dp">
        <shape
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="@dimen/chat_bubble_corners"
                android:bottomRightRadius="@dimen/chat_bubble_corners"
                android:topRightRadius="@dimen/chat_bubble_corners"
                android:topLeftRadius="0dp" />
        </shape>
    </item>

    <item
        android:width="@dimen/talk_bubble_tail"
        android:height="@dimen/talk_bubble_tail"
        android:gravity="top|left"
        android:right="@dimen/talk_bubble_tail"
        android:left="2.5dp"
        android:top="1dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <vector
                android:width="@dimen/talk_bubble_tail"
                android:height="@dimen/talk_bubble_tail"
                android:viewportWidth="25.0"
                android:viewportHeight="25.0">
                <path
                    android:fillColor="@color/white"
                    android:pathData="M25,25 25,0 0,0z" />
            </vector>
        </rotate>
    </item>

</layer-list>